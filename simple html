        <button id='btn_No' onclick='No(this)' style='position:absolute'>No</button> #input button
    </body>
    <script> #import result of button
        function No(id){
            var Yes = document.getElementById('btn_Yes'); 
            var i = Math.floor(Math.random()*500)+1;
            var j = Math.floor(Math.random()*300)+Yes.offsetTop;
            id.style.left = i+'px';
            id.style.top = j+'px';
        }
    </script>
